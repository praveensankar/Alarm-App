<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        
    <DigitalClock
        android:id="@+id/pDigitalClock"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="DigitalClock"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/pImageView"
        android:layout_width="match_parent"
        android:layout_height="234dp"
        android:src="@drawable/ic_launcher" />

    
        <TextView
            android:id="@+id/pQuestion"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="find the secret trail"
            android:textSize="20dp"
             />

    
    <RadioGroup
        android:id="@+id/pAnswers"
        android:layout_width="match_parent"
        android:layout_height="150dp" 
        android:gravity="center">
        <RadioButton
            android:id="@+id/pAnswer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="answer" />

        <RadioButton
            android:id="@+id/pAnswer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="answer" />

        <RadioButton
            android:id="@+id/pAnswer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="answer" />
    </RadioGroup>

    <Button
        android:id="@+id/pStopAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop alarm"
        android:textSize="20dp"
        android:gravity="center" 
        android:layout_gravity="center"/>
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>